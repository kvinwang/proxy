#!/bin/sh
mkdir -p ~/.ssh

>>~/.ssh/id_rsa.pub cat <<EOF
ssh-rsa  kvin@J1900
EOF
PRI_KEY=$(echo $PRI_KEY | tr ' ' '\n')
>>~/.ssh/id_rsa cat <<EOF
-----BEGIN RSA PRIVATE KEY-----
$PRI_KEY
-----END RSA PRIVATE KEY-----
EOF

chmod 600 ~/.ssh/id_rsa
./merino --no-auth > /dev/null 2>&1 &
ssh -o StrictHostKeyChecking=no -tt -R1081:localhost:1080 kvin@home.kvin.wang
